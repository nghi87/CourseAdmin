<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.liferay.course">
	<author>ces</author>
	<namespace>CS</namespace>
	<entity name="Course" local-service="true" uuid="true">


		<!-- PK fields -->

		<column name="courseId" type="long" primary="true"></column>

		<!-- Group instance -->

		<column name="groupId" type="long"></column>

		<!-- Audit fields -->

		<column name="companyId" type="long"></column>
		<column name="userId" type="long"></column>
		<column name="userName" type="String"></column>
		<column name="createDate" type="Date"></column>
		<column name="modifiedDate" type="Date"></column>
		<column name="name" type="String"></column>
		<column name="description" type="String"></column>
		<column name="lecturer" type="String"></column>
		<column name="duration" type="int"></column>
		<column name="status" type="boolean"></column>
		<order by="asc">
			<order-column name="name" order-by="asc" case-sensitive="true"></order-column>
		</order>
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId"></finder-column>
		</finder>
	</entity>
	<exceptions>
		<exception>CourseName</exception>
		<exception>CourseDescription</exception>
		<exception>CourseLecturer</exception>
		<exception>CourseDuration</exception>
		<exception>CourseStatus</exception>
	</exceptions>
</service-builder>